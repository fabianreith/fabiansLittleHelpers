# move to ~/.ssh/ and name "config"
# mkdir ~/.ssh/multiplexing

# Global settings for all hosts
Host *
     ControlMaster auto
     ControlPersist yes
     ControlPath ~/.ssh/multiplexing/%C
     ForwardAgent yes
     ServerAliveInterval 60
     ServerAliveCountMax 10

# Example: Server with jump host/proxy
Host example-server
     User <your-username>
     HostName <server.example.com>
     IdentityFile ~/.ssh/id_example
     ProxyCommand ssh example-jump -W %h:%p
     Port 22

# Example: Jump host / bastion
Host example-jump
     User <your-username>
     HostName <jump.example.com>
     IdentityFile ~/.ssh/id_example
     Port 22

# Example: Server behind jump host
Host example-internal
     User <your-username>
     HostName <internal.example.com>
     IdentityFile ~/.ssh/id_example
     ProxyCommand ssh example-jump -W %h:%p
     Port 22

# Example: Direct connection with custom port
Host example-direct
     User <your-username>
     HostName <ip-address-or-hostname>
     IdentityFile ~/.ssh/id_example
     Port 2222
